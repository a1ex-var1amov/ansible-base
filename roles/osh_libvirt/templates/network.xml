<network>
  <name>{{ item.key }}</name>
  <forward mode='nat'>
    <nat>
      <port start='1024' end='65535'/>
    </nat>
  </forward>
  <bridge name='{{ item.value.bridge_name }}' stp='on' delay='0'/>
  <mac address='{{ item.value.bridge_mac }}'/>
  <ip address='{{ item.value.bridge_ip }}' netmask='{{ item.value.bridge_netmask }}'>
    <dhcp>
      <range start='{{ item.value.ip_range_start }}' end='{{ item.value.ip_range_end }}'/>
{% for key, value in virtual_machines.items() %}
  {% if value.network == item.key %}
      <host mac='{{ value.mac }}' name='{{ key }}.{{ virtual_machines_domain }}' ip='{{ value.ip }}'/>
  {% endif %}
{% endfor %}
    </dhcp>
  </ip>
{% if item.value.dns_forward is defined %}
  <dns>
    <forwarder addr='{{ item.value.dns_forward }}'/>
  </dns>
{% endif %}
</network>
